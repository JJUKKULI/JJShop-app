generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"     // 지금은 sqlite로 테스트하고 싶으면 "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id        String   @id @default(cuid())
  title     String
  price     Int
  stock     Int      @default(0)
  createdAt DateTime @default(now())
}

